<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">



    <RelativeLayout
        android:id="@+id/productbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="AnanthayaMart"
            android:textSize="20sp"
            android:gravity="center"
            android:textAlignment="center">

        </TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarcart"
            android:src="@drawable/carttoolbar"
            android:layout_marginStart="350dp"
            android:layout_marginTop="10dp">

        </ImageView>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarperson"
            android:src="@drawable/toolbarperson"
            android:layout_marginStart="250dp"
            android:layout_marginTop="10dp">

        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home"
            android:src="@drawable/home_24"
            android:layout_marginEnd="380dp"
            android:layout_marginTop="10dp">

        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search2"
            android:src="@drawable/search_24"
            android:layout_marginEnd="280dp"
            android:layout_marginTop="10dp">

        </ImageView>

    </RelativeLayout>
    <TextView
        android:layout_below="@+id/productbar"
        android:id="@+id/cake_head2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="Manage Cake"
        android:textAlignment="center"
        android:textColor="@color/themeColor"
        android:textStyle="bold"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_menu2"
        android:layout_below="@+id/cake_head2"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical">

    </androidx.recyclerview.widget.RecyclerView>







</RelativeLayout>